pipeline {
    agent any

    environment {
        // Docker Hub credentials ID from Jenkins
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')

        // ✅ Use your correct Docker Hub username
        DOCKER_IMAGE = "jacky260/pipeline-for-dcoker-hub"

        // GitHub repo
        GIT_REPO = "https://github.com/jacky4421/pipeline-for-dcoker-hub.git"
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${env.GIT_REPO}"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // ✅ Add sudo to avoid docker.sock permission denied
                    sh "sudo docker build -t ${DOCKER_IMAGE}:latest ."
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    // Login securely to Docker Hub
                    sh "echo ${DOCKERHUB_CREDENTIALS_PSW} | sudo docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin"
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh "sudo docker push ${DOCKER_IMAGE}:latest"
                }
            }
        }

        stage('Cleanup') {
            steps {
                // Clean up local image to save space
                sh "sudo docker rmi ${DOCKER_IMAGE}:latest || true"
            }
        }
    }

    // ✅ Poll GitHub every 5 minutes for updates (no webhook needed)
    triggers {
        pollSCM('H/5 * * * *')
    }

    post {
        success {
            echo "✅ Build and push successful!"
        }
        failure {
            echo "❌ Build failed."
        }
    }
}
